<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
       
    </style>

    <style name="ActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/NormalActionbar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:homeAsUpIndicator">@drawable/back</item>
    </style>

    <style name="ActionBarMessageTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/NormalActionbar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:homeAsUpIndicator">@drawable/back</item>
        <item name="android:actionMenuTextAppearance">@style/MessageMenuTitleStyle</item>
    </style>

    <style name="NormalActionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/background</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MessageMenuTitleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
