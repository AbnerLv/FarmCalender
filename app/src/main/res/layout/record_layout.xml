<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scheduleTop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/zong"
            android:clickable="true"
            android:gravity="center"
            android:text="日历"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold" />

        <com.pyp.farmcalender.ui.view.border.BorderText
            android:id="@+id/toptext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@mipmap/previous_year"
            android:drawableRight="@mipmap/next_year"
            android:gravity="center"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:textSize="18sp" />

        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <com.pyp.farmcalender.ui.view.border.BorderTextView
        android:id="@+id/tv_all_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="全部事件"
        android:textColor="#000000"
        android:textSize="22sp" />

</LinearLayout>
