<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_message_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="你是谁，我又谁。你是谁，我又谁。你是谁，我又谁。你是谁，我又谁。你是谁，我又谁。你是谁，
        我又谁。你是谁，我又谁。你是谁，我又谁。你是谁，我又谁。你是谁，我又谁。你是谁，我又谁。你是谁，我又谁。你是谁，我又谁。"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ListView
            android:id="@+id/lv_message_detail_all_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true">

            <EditText
                android:id="@+id/et_reply"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:textSize="16sp"
                android:ems="10"
                android:hint="评论..."/>

            <ImageView
                android:id="@+id/iv_reply"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/reply" />

        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>